{
  "name": "@callstack/repack",
  "version": "4.4.1",
  "description": "A Webpack-based toolkit to build your React Native application with full support of Webpack ecosystem.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "react-native": "",
  "files": [
    "dist",
    "docs",
    "android",
    "!android/build",
    "ios",
    "!ios/build",
    "commands.js",
    "commands.d.ts",
    "client.js",
    "client.d.ts",
    "assets-loader.js",
    "callstack-repack.podspec",
    "src/modules/ScriptManager/NativeScriptManager.ts",
    "CHANGELOG.md"
  ],
  "homepage": "https://github.com/callstack/repack",
  "repository": "github:callstack/repack",
  "keywords": [
    "react-native",
    "react native",
    "webpack",
    "bundle",
    "bundling",
    "metro"
  ],
  "author": "zamotany <zamotany.oss@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build:js": "babel src --out-dir dist --extensions \".js,.ts\" --source-maps --ignore \"**/__tests__/**\" --delete-dir-on-start",
    "build:ts": "tsc --emitDeclarationOnly",
    "build": "pnpm run \"/^build:.*/\"",
    "lint": "eslint --ext \".js,.ts\" commands.js client.js src",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "archive": "pnpm build && pnpm pack",
    "clang-format": "pnpm clang-format:ios && pnpm clang-format:android",
    "clang-format:ios": "find ios/ -iname \"*.h\" -o -iname \"*.m\" -o -iname \"*.mm\" -o -iname \"*.cpp\" | xargs clang-format -i --Werror",
    "clang-format:android": "find android/src/ -iname \"*.h\" -o -iname \"*.cpp\" | xargs clang-format -i"
  },
  "peerDependencies": {
    "@react-native-community/cli": "*",
    "@react-native-community/cli-types": "*",
    "react-native": ">=0.63",
    "webpack": "5.x"
  },
  "dependencies": {
    "@callstack/repack-dev-server": "workspace:^",
    "@discoveryjs/json-ext": "^0.5.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.13",
    "colorette": "^1.2.2",
    "dedent": "^0.7.0",
    "escape-string-regexp": "^4.0.0",
    "events": "^3.3.0",
    "execa": "^5.0.0",
    "fs-extra": "^10.0.0",
    "hasha": "^5.2.2",
    "image-size": "^0.9.3",
    "jsonwebtoken": "^9.0.0",
    "lodash.throttle": "^4.1.1",
    "memfs": "^3.4.4",
    "mime-types": "^2.1.35",
    "pretty-format": "^26.6.2",
    "react-refresh": "^0.14.0",
    "schema-utils": "^3.0.0",
    "shallowequal": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.2",
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-export-namespace-from": "^7.24.6",
    "@babel/plugin-transform-modules-commonjs": "^7.23.2",
    "@react-native-community/cli": "15.0.1",
    "@react-native-community/cli-types": "15.0.1",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/lodash.throttle": "^4.1.9",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^18",
    "@types/react-dom": "^17.0.7",
    "@types/shallowequal": "^1.1.1",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "clang-format": "^1.8.0",
    "eslint": "^8.57.0",
    "headers-polyfill": "^3.0.7",
    "jest": "^29.7.0",
    "react": "18.3.1",
    "react-native": "0.76.6",
    "react-native-event-source": "^1.1.0",
    "terser-webpack-plugin": "^5.1.3",
    "typescript": "^5.5.3",
    "webpack": "^5.91.0",
    "webpack-virtual-modules": "^0.4.4"
  },
  "codegenConfig": {
    "name": "RNScriptManagerSpec",
    "type": "modules",
    "jsSrcsDir": "src"
  }
}
